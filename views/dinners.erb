<% unless @dinners.empty? %>
<h1>All Dinners</h1>
<table class="table table-hover">
    <% @dinners.each do |dinner| %>
        <tr>
            <td align="center"><h2><%= dinner.text %></h2></td><td align="right"><h2><a class="btn btn-danger" href="/dinner/<%= dinner.id %>/delete"><span class="fa fa-trash-o fa-2x"></span> Delete</a></h2></td>
        </tr>
    <% end %>
</table>
<% else %>
    <p><h2>You have no dinners! Why not add one?</h2></p>
<% end %>
